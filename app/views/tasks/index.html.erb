
  <div class="row">
    <div class="col-sm-12 text-center">
      <h2>Your tasks for today, <%= link_to(current_user.email, destroy_user_session_path, method: :delete) %></h2>
    </div>
    <div class="col-sm-12 text-center" style="margin-top: 20px;">
      <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">Add New Task</button>    
    </div>
  </div>  


<!-- Trigger the modal with a button -->


<div class="alerts"></div>

<div class="list-group" style="margin-top: 40px;">
  <% if @tasks.size > 0 %>
    <% @tasks.each do |task| %>
      <a href="#" class="list-group-item">
        <strong><%= task.title %></strong> | <%= task.deadline.strftime("%d/%m/%Y") %> <span class="badge"><%= task.importance %></span>
      </a>
    <% end %>
  <% else %>
      <h2>Não há tarefas pra hoje. :)</h2>
  <% end %>
</div>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Task</h4>
      </div>
      <%= render 'form' %>

    </div>

  </div>
</div>
