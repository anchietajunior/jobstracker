<style>
  .datepicker {
    top: 50px;
  }
</style>

<%= form_for @task, remote: true do |f| %>
<div class="modal-body">

    <div id="error_explanation">
    </div>
    

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :importance %>
      <%= f.select :importance, options_for_select([["Alta", :high], ["Normal", :normal], ["Baixa", :low]]), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :deadline %>
      <%= f.text_field :deadline, class: "form-control datepicker" %>
    </div>

    <div class="field">
      <%= f.label :observation %>
      <%= f.text_area :observation, class: "form-control" %>
    </div>

</div>
<div class="modal-footer">
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
</div>
<% end %>
<script type="text/javascript" charset="utf-8">

  $('.datepicker').datepicker({
      format: 'dd/mm/yyyy',
      autoclose: true,
      clearBtn: true,
      language: "pt-BR",
      todayHighlight: true,
      orientation: "bottom"
  });
</script>

