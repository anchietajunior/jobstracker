<% if @task.errors.any? %>
	$('#error_explanation').append("<ul><% @donor.errors.full_messages.each do |message| %><li><%= message %></li><% end %></ul>");
	alert("Ocorreu um erro!")
<% elsif @task.deadline == Date.today %>
	$('#myModal').modal('toggle');
	$('.alerts').append('<div class="alert alert-success">Task sucessfully created.</div>');
	$('.list-group').prepend('<a href="#" class="list-group-item"><strong><%= @task.title %></strong> | <%= @task.deadline.strftime("%d/%m/%Y") %> <span class="badge"><%= @task.importance %></span></a>');
	$(".alert").delay(4000).slideUp(200, function() {
    $(this).alert('close');
	});
<% else %>
	$('#myModal').modal('toggle');
	$('.alerts').append('<div class="alert alert-success">Task sucessfully created.</div>');
	$(".alert").delay(4000).slideUp(200, function() {
    $(this).alert('close');
	});
<% end %>